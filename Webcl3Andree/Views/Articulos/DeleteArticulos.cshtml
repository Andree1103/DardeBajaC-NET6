@model Cl3AndreeChiquis.Models.Articulos

@{
    ViewData["Title"] = "DeleteArticulos";
}

<h1>Dar de Baja al Articulo</h1>
<div>
    <h4>Articulos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cod_art)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cod_art)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nom_art)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nom_art)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.uni_med)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.uni_med)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pre_art)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pre_art)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stk_art)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stk_art)
        </dd>
        <dd>
            <img src="@Url.Content("~/articulos/" + ViewBag.CodigoArticulo + ".jpg")" alt="Imagen del artículo" class="img-thumbnail" style="width: 200px; height: 200px;" />
        </dd>

    </dl>
    
    
    <form asp-action="DeleteArticulos">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="IndexArticulos" class="btn btn-warning">Back to List</a>
    </form>
</div>

<br />
<div class="alert alert-success">
    <p>
        @ViewBag.MENSAJE
    </p>
</div>
